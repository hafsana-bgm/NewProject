@{
    Layout = "~/Views/Shared/_EducutLayout.cshtml";
    ViewData["Title"] = "EduCut Home Page";
}

@model NewProject.DataModels.HomeViewModel

<!-- slider section -->
<section class="slider_section long_section">
    <div id="customCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="detail-box">
                                <h1>
                                    @ViewBag.Slider.Slider1
                                </h1>
                                <p>
                                    @ViewBag.Slider.SliderBody1
                                </p>
                                <div class="btn-box">
                                    <a href="" class="btn1">
                                        Contact Us
                                    </a>
                                    <a href="" class="btn2">
                                        About Us
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="img-box">
                                <img src="~/images/slider-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="detail-box">
                                <h1>
                                    @ViewBag.Slider.Slider2
                                </h1>
                                <p>
                                    @ViewBag.Slider.SliderBody2
                                </p>
                                <div class="btn-box">
                                    <a href="" class="btn1">
                                        Contact Us
                                    </a>
                                    <a href="" class="btn2">
                                        About Us
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="img-box">
                                <img src="~/images/slider-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="detail-box">
                                <h1>
                                    @ViewBag.Slider.Slider3
                                </h1>
                                <p>
                                    @ViewBag.Slider.SliderBody3
                                </p>
                                <div class="btn-box">
                                    <a href="" class="btn1">
                                        Contact Us
                                    </a>
                                    <a href="" class="btn2">
                                        About Us
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="img-box">
                                <img src="~/images/slider-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#customCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#customCarousel" data-slide-to="1"></li>
            <li data-target="#customCarousel" data-slide-to="2"></li>
        </ol>
    </div>
</section>
<!-- end slider section -->
<!-- furniture section -->

<section class="furniture_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Book
            </h2>
            <p>
                @ViewBag.Furniture.Content
            </p>
        </div>
        <div class="row">

            @{
                if (Model.Books.Any())
                {
                    foreach (var product in Model.Books)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="box">
                                <div class="img-box">
                                    <img src="@product.Image" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @product.BookName
                                    </h5>
                                    <div class="price_box">
                                        <h6 class="price_heading">
                                            <span>$</span> @product.BookPrice
                                        </h6>
                                        <a href="">
                                            Buy Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            }


        </div>
    </div>
</section>

<!-- end furniture section -->
<!-- about section -->

<section class="about_section layout_padding long_section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/images/about-img.png" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            About Us
                        </h2>
                    </div>
                    <p>
                        @ViewBag.AboutUs
                    </p>
                    <a href="">
                        Read More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end about section -->
<!-- blog section -->

<section class="blog_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Latest Blog
            </h2>
        </div>
        <div class="row">


            @{

                if (Model.Blogs.Count() > 0)
                {
                    foreach (var blog in Model.Blogs)
                    {
                        <div class="col-md-6 col-lg-4 mx-auto">
                            <div class="box">
                                <div class="img-box">
                                    <img src="@blog.BlogThumbnails" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @blog.BlogTitle
                                    </h5>
                                    <p>
                                        @blog.BlogContent
                                    </p>
                                    <a href="">
                                        Read More
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                }

            }
                    


        </div>
    </div>
</section>

<!-- end blog section -->
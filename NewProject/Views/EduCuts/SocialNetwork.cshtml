@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "EduCut Product Page";
}
@model NewProject.DataModels.SocialLink

<!-- Default box -->
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Title</h3>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
            <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="box-body">

        <section class="contact_section  long_section">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form_container">
                            <div class="heading_container">
                                <h2>
                                    Creat Furniture
                                </h2>
                            </div>

                            
                                <div>
                                    <input type="text" placeholder="Social Name" id="SocialName" name="SocialName" />
                                </div>
                                <div>
                                    <input type="text" placeholder="Social Link" id="Link" name="Link" />
                                </div>
                                <div>
                                    <input type="text" placeholder="Social Icon" id="SocialIcon" name="SocialIcon" />
                                </div>
                                
                                <div class="btn_box">
                                    <button type="submit" id="submitform" class="btn btn-primary">
                                        SEND
                                    </button>
                                </div>
                           
                        </div>

                    </div>

                </div>
            </div>
        </section>
    </div><!-- /.box-body -->
    <div class="box-footer">
        Footer
    </div><!-- /.box-footer-->
</div><!-- /.box -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        
        $('#submitform'). click(function ()
        {


            // alert("hi you clicke submit form button")
            //var inputtest = $('#SocialName').val();
           // console.log(inputtest);
            
            var formdata ={
                SocialName: $('SocialName').val(),
                 lLink: $('#Link').val(),
                 SocialIcon: $('#SocialIcon').val()

            };
            //debugger;
            //console.log(formdata);
            $.ajax({

                url: '/EduCuts/SaveSocialNetwork',
                type:'POST',
                data:formdata,

                success:function(response) {

                    alert(response.message);
                  

                },

                Error:function(Xhr, status, error) {
                    alert('Error saving social link');
                    console.log(Xhr, status, error)
                }

            });

        });


    });

</script>

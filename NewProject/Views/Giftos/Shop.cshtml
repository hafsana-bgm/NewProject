@{
	Layout = "~/Views/Shared/_GiftosLayout.cshtml";

}
@model IEnumerable<NewProject.DataDatamodels.Shop>

<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Latest Products
            </h2>
        </div>
        <div class="row">
            @{
                if( Model !=null)
                {
                    foreach(var Shop in Model)
                    
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <div class="box">
                                <a asp-action="ShopDetails" asp-controller="Giftos" asp-route-id="@Shop.Id">
                                    <div class="img-box">
                                        <img src="@Shop.ProductImage" alt="">
                                    </div>
                                    <div class="detail-box">
                                        <h6>
                                            @Shop.ProductName
                                        </h6>
                                        <h6>
                                            @Shop.ProductPrice
                                            <span>
                                                $
                                            </span>
                                        </h6>
                                    </div>
                                    <div>
                                        @Shop.ProductCondition
                                        
                                    </div>

                                    <div>
                                        <button type="button" class="btn btn-primary">Add to Cart</button>
                                        <button type="button" class="btn btn-success">Buy Now</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }

                }
            }



            <div class="btn-box">
                <a asp-action="AllProduct" asp-controller="Giftos">
                    View All Products
                </a>
            </div>
        
         </div>
    </div>
</section>

<!-- end shop section -->
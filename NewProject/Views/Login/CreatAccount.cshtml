<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width,
                   initial-scale=1,
                   shrink-to-fit=no" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <title>Bootstrap Form</title>
</head>

<body>
    <h1 class="text-success text-center">
        Creat Your Account
    </h1>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">


                        <div class="form-group">
                            <label for="Name">
                                Name
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="name"
                                   name="name"
                                   placeholder="Name" required />
                        </div>



                        <div class="form-group">
                            <label for="email">
                                Email
                            </label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   placeholder="Email" required />
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                            </label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="password"
                                   placeholder="Password"
                                   required />
                        </div>
                        <button type="submit" id="submitform" class="btn btn-danger">
                            Sign up
                        </button>




                        <p class="mt-3">
                             Registered?
                            <a asp-action="CreatId" asp-controller="Login">
                                Login
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    $(document).ready(function(){

        $('#submitform').click(function() {

            var formdata = {
                Name:$('#name').val(),
                Email: $('#email').val(),
                Password: $('#password').val()


            };
            //console.log(formdata)

            $.ajax({

                url: '/Login/CreatAccount',
                type: 'POST',
                data: formdata,
                success: function(response){


                  alert(response.message)

                },
                error:function(){

                    alert('Error Submit')

                }

            });

        });

    });


</script>





@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "EduCut Product Page";
}
@model IEnumerable<NewProject.DataModels.Books>


<!-- Default box -->
<div class="box">
	<div class="box-header with-border">
		<h3 class="box-title">Title</h3>
		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
			<button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
		</div>
	</div>
	<div class="box-body">


		<div class="container my-5">

			<table class="table table-hover my-5">
				<thead class="table-info">
					<tr>
						<th>Serial</th>
						<th>Book Name</th>
						<th>Book Description</th>
						<th>Stock</th>
						<th>Book Price</th>
						<th>Image</th>
						<th>Action</th>




					</tr>
				</thead>

				<tbody>
					@{
						int serial = 1;
						foreach (var data in Model)
						{
							<tr>
								<td>@serial</td>
								<td>@data.BookName</td>
								<td>@data.BookDescription</td>
								<td>@data.Stock</td>
								<td>@data.BookPrice</td>
								<td>
									<img src="@data.Image" style="width:50px;" />
								</td>

								<td>


									<a class="btn btn-info" asp-route-id="@data.Id" asp-controller="Books" asp-action="BookInfo">Info</a>


									<a class="btn btn-warning" asp-route-id="@data.Id" asp-controller="Books" asp-action="BookEdit">Edit</a>

									<a class="btn btn-danger" asp-route-id="@data.Id" asp-controller="Books" asp-action="BookDelete">Delete</a>
								</td>

							</tr>

							serial++;


						}



					}


				</tbody>

			</table>


		</div>

	</div><!-- /.box-body -->
	<div class="box-footer">
		Footer
	</div><!-- /.box-footer-->
</div><!-- /.box -->